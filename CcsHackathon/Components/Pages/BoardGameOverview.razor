@page "/board-games"
@using CcsHackathon.Services
@using CcsHackathon.Data
@attribute [Authorize]
@inject IBoardGameOverviewService BoardGameOverviewService
@inject ISessionService SessionService
@inject IBoardGameFaqService BoardGameFaqService
@inject IUserContext UserContext
@inject ILogger<BoardGameOverview> Logger

<PageTitle>Board Games Overview</PageTitle>

<div class="container mt-4">
    <h2>Registered Board Games</h2>
    <p class="text-muted">Overview of all board games that have been registered</p>
    
    <div class="row mb-3">
        <div class="col-md-4">
            <label for="sessionFilter" class="form-label">Select Session <span class="text-danger">*</span></label>
            <InputSelect id="sessionFilter" class="form-select" 
                         Value="@selectedSessionIdString" 
                         ValueChanged="@((string value) => OnSessionFilterChanged(value))"
                         ValueExpression="@(() => selectedSessionIdString)">
                <option value="">-- Select a session --</option>
                @if (sessions != null)
                {
                    @foreach (var session in sessions)
                    {
                        <option value="@session.Id.ToString()">@session.Date.ToString("yyyy-MM-dd")</option>
                    }
                }
            </InputSelect>
            <small class="form-text text-muted">Only games registered for the selected session will be shown</small>
        </div>
    </div>
    
    @if (!selectedSessionId.HasValue)
    {
        <div class="alert alert-warning" role="alert">
            <strong>Please select a session</strong> to view board games registered for that session.
        </div>
    }
    else if (games == null)
    {
        <div class="text-center py-5">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2">Loading board games...</p>
        </div>
    }
    else if (!games.Any())
    {
        <div class="alert alert-info" role="alert">
            <strong>No games registered for this session.</strong> 
            <a href="/register-game" class="alert-link">Register a game</a> for this session to get started.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>
                            <button class="btn btn-link p-0 text-decoration-none text-reset fw-bold" 
                                    @onclick="() => SortBy(nameof(BoardGameOverviewItem.GameName))"
                                    style="border: none; background: none;">
                                Game Name
                                @if (sortColumn == nameof(BoardGameOverviewItem.GameName))
                                {
                                    <span class="ms-1">@(sortAscending ? "↑" : "↓")</span>
                                }
                            </button>
                        </th>
                        <th>
                            <button class="btn btn-link p-0 text-decoration-none text-reset fw-bold" 
                                    @onclick="() => SortBy(nameof(BoardGameOverviewItem.Complexity))"
                                    style="border: none; background: none;">
                                Complexity
                                @if (sortColumn == nameof(BoardGameOverviewItem.Complexity))
                                {
                                    <span class="ms-1">@(sortAscending ? "↑" : "↓")</span>
                                }
                            </button>
                        </th>
                        <th>Setup Time</th>
                        <th>Average Playtime</th>
                        <th>Average Rating</th>
                        <th>AI Data</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var game in sortedGames)
                    {
                        <tr>
                            <td><strong>@game.GameName</strong></td>
                            <td>
                                @if (game.Complexity.HasValue)
                                {
                                    @((MarkupString)RenderStarRating(game.Complexity.Value))
                                }
                                else
                                {
                                    <span class="text-muted">—</span>
                                }
                            </td>
                            <td>
                                @if (game.TimeToSetupMinutes.HasValue)
                                {
                                    <text>@game.TimeToSetupMinutes.Value min</text>
                                }
                                else
                                {
                                    <span class="text-muted">—</span>
                                }
                            </td>
                            <td>
                                @if (game.AveragePlaytimeMinutes.HasValue)
                                {
                                    <text>@game.AveragePlaytimeMinutes.Value min</text>
                                }
                                else
                                {
                                    <span class="text-muted">—</span>
                                }
                            </td>
                            <td>
                                @if (game.AverageRating.HasValue)
                                {
                                    <div>
                                        @((MarkupString)RenderStarRating(game.AverageRating.Value))
                                        <span class="ms-2 text-muted small">(@game.AverageRating.Value.ToString("F1"))</span>
                                        @if (game.RatingCount > 0)
                                        {
                                            <span class="ms-1 text-muted small">(@game.RatingCount @(game.RatingCount == 1 ? "rating" : "ratings"))</span>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted">No ratings yet</span>
                                }
                            </td>
                            <td>
                                @if (game.HasAiData)
                                {
                                    <span class="badge bg-success">Available</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Pending</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    @if (!string.IsNullOrWhiteSpace(game.Summary))
                                    {
                                        <button class="btn btn-sm btn-outline-primary" 
                                                @onclick="() => ShowDescriptionModal(game)">
                                            View Description
                                        </button>
                                    }
                                    <button type="button" class="btn btn-sm btn-outline-info" 
                                            @onclick="() => ShowQuestionSelector(game)">
                                        Ask Question
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        <div class="mt-3 text-muted small">
            <p>Showing <strong>@sortedGames.Count()</strong> game(s)</p>
        </div>
    }
</div>

@* Description Modal *@
@if (selectedGameForDescription != null)
{
    <div class="modal fade show d-block" style="background-color: rgba(0,0,0,0.5);" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@selectedGameForDescription.GameName</h5>
                    <button type="button" class="btn-close" @onclick="CloseDescriptionModal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <h6 class="fw-bold">Description</h6>
                        <p>@selectedGameForDescription.Summary</p>
                    </div>
                    
                    @if (selectedGameForDescription.Complexity.HasValue || selectedGameForDescription.TimeToSetupMinutes.HasValue)
                    {
                        <div class="border-top pt-3">
                            @if (selectedGameForDescription.Complexity.HasValue)
                            {
                                <div class="mb-2">
                                    <h6 class="fw-bold mb-1">Complexity</h6>
                                    <div>@((MarkupString)RenderStarRating(selectedGameForDescription.Complexity.Value))</div>
                                </div>
                            }
                            @if (selectedGameForDescription.TimeToSetupMinutes.HasValue)
                            {
                                <div>
                                    <h6 class="fw-bold mb-1">Setup Time</h6>
                                    <p class="mb-0">@selectedGameForDescription.TimeToSetupMinutes.Value minutes</p>
                                </div>
                            }
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseDescriptionModal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

@* Question Selector Modal *@
@if (selectedGameForQuestionSelector != null)
{
    <div class="modal fade show d-block" style="background-color: rgba(0,0,0,0.5);" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Ask a Question: @selectedGameForQuestionSelector.GameName</h5>
                    <button type="button" class="btn-close" @onclick="CloseQuestionSelector" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Select a common question:</label>
                        <div class="list-group">
                            @foreach (var question in commonQuestions)
                            {
                                <button type="button" class="list-group-item list-group-item-action" 
                                        @onclick="() => SelectQuestion(question)">
                                    @question
                                </button>
                            }
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Or type your own question:</label>
                        <input type="text" class="form-control" @bind="customQuestion" 
                               placeholder="Enter your question..." 
                               @onkeypress="OnCustomQuestionKeyPress" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseQuestionSelector">Cancel</button>
                    <button type="button" class="btn btn-primary" 
                            @onclick="() => SelectQuestion(customQuestion)" 
                            disabled="@string.IsNullOrWhiteSpace(customQuestion)">
                        Ask Question
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

@* FAQ Conversation Modal *@
@if (selectedGameForFaq != null)
{
    <div class="modal fade show d-block" style="background-color: rgba(0,0,0,0.5);" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">FAQ: @selectedGameForFaq.GameName</h5>
                    <button type="button" class="btn-close" @onclick="CloseFaqModal" aria-label="Close"></button>
                </div>
                <div class="modal-body" style="max-height: 500px; overflow-y: auto;">
                    @if (faqConversation == null)
                    {
                        <div class="text-center py-3">
                            <div class="spinner-border" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="conversation-thread mb-3">
                            @foreach (var message in faqConversation)
                            {
                                <div class="mb-3 @(message.Role == "user" ? "text-end" : "text-start")">
                                    <div class="d-inline-block p-2 rounded @(message.Role == "user" ? "bg-primary text-white" : "bg-light")" style="max-width: 80%;">
                                        <div class="fw-bold small mb-1">@(message.Role == "user" ? "You" : "AI Assistant")</div>
                                        <div>@message.Content</div>
                                    </div>
                                </div>
                            }
                        </div>
                        
                        @if (isLoadingFaqResponse)
                        {
                            <div class="text-center py-2">
                                <div class="spinner-border spinner-border-sm" role="status">
                                    <span class="visually-hidden">Thinking...</span>
                                </div>
                            </div>
                        }
                        
                        <div class="input-group">
                            <input type="text" class="form-control" @bind="followUpQuestion" @bind:event="oninput" 
                                   placeholder="Ask a follow-up question..." 
                                   disabled="@isLoadingFaqResponse"
                                   @onkeypress="OnFollowUpKeyPress" />
                            <button class="btn btn-primary" @onclick="AskFollowUp" disabled="@(isLoadingFaqResponse || string.IsNullOrWhiteSpace(followUpQuestion))">
                                Send
                            </button>
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseFaqModal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

@code {
    private IEnumerable<BoardGameOverviewItem>? games;
    private IEnumerable<BoardGameOverviewItem> sortedGames = Enumerable.Empty<BoardGameOverviewItem>();
    private string sortColumn = nameof(BoardGameOverviewItem.GameName);
    private bool sortAscending = true;
    private List<Session>? sessions;
    private Guid? selectedSessionId;
    private string selectedSessionIdString = string.Empty;
    private BoardGameOverviewItem? selectedGameForDescription;
    
    // FAQ state
    private BoardGameOverviewItem? selectedGameForFaq;
    private BoardGameOverviewItem? selectedGameForQuestionSelector;
    private List<BoardGameConversationMessage>? faqConversation;
    private Guid? currentConversationId;
    private string followUpQuestion = string.Empty;
    private string customQuestion = string.Empty;
    private bool isLoadingFaqResponse = false;
    private List<string> commonQuestions = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            sessions = (await SessionService.GetAllSessionsAsync()).ToList();
            // Don't load games until a session is selected
            games = Enumerable.Empty<BoardGameOverviewItem>();
            sortedGames = Enumerable.Empty<BoardGameOverviewItem>();
            
            // Load common questions
            commonQuestions = BoardGameFaqService.GetCommonQuestions();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading board games overview");
            games = Enumerable.Empty<BoardGameOverviewItem>();
            sortedGames = Enumerable.Empty<BoardGameOverviewItem>();
        }
    }

    private async Task LoadGamesAsync()
    {
        if (!selectedSessionId.HasValue)
        {
            games = Enumerable.Empty<BoardGameOverviewItem>();
            sortedGames = Enumerable.Empty<BoardGameOverviewItem>();
            StateHasChanged();
            return;
        }

        try
        {
            // Fetch games data for the selected session only
            games = await BoardGameOverviewService.GetBoardGamesAsync(selectedSessionId);
            ApplySorting();
            
            // Force UI update
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading games for session {SessionId}", selectedSessionId);
            games = Enumerable.Empty<BoardGameOverviewItem>();
            sortedGames = Enumerable.Empty<BoardGameOverviewItem>();
            StateHasChanged();
        }
    }

    private async Task OnSessionFilterChanged(string value)
    {
        selectedSessionIdString = value ?? string.Empty;
        
        // Parse the session ID
        if (string.IsNullOrWhiteSpace(value) || !Guid.TryParse(value, out var sessionId))
        {
            selectedSessionId = null;
        }
        else
        {
            selectedSessionId = sessionId;
        }
        
        // Clear current games list immediately to prevent stale data
        games = null;
        sortedGames = Enumerable.Empty<BoardGameOverviewItem>();
        StateHasChanged();
        
        // Load games for the selected session
        if (selectedSessionId.HasValue)
        {
            await LoadGamesAsync();
        }
        else
        {
            // No session selected, clear the list
            games = Enumerable.Empty<BoardGameOverviewItem>();
            sortedGames = Enumerable.Empty<BoardGameOverviewItem>();
            StateHasChanged();
        }
    }

    private void ShowDescriptionModal(BoardGameOverviewItem game)
    {
        selectedGameForDescription = game;
    }
    
    private void CloseDescriptionModal()
    {
        selectedGameForDescription = null;
    }

    private void ShowQuestionSelector(BoardGameOverviewItem game)
    {
        selectedGameForQuestionSelector = game;
        customQuestion = string.Empty;
    }

    private void CloseQuestionSelector()
    {
        selectedGameForQuestionSelector = null;
        customQuestion = string.Empty;
    }

    private async Task SelectQuestion(string question)
    {
        if (string.IsNullOrWhiteSpace(question) || selectedGameForQuestionSelector == null)
            return;

        // Capture the game reference before closing the selector
        var game = selectedGameForQuestionSelector;
        CloseQuestionSelector();
        await AskQuestion(game, question);
    }

    private async Task OnCustomQuestionKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !string.IsNullOrWhiteSpace(customQuestion))
        {
            await SelectQuestion(customQuestion);
        }
    }

    private void SortBy(string column)
    {
        if (sortColumn == column)
        {
            sortAscending = !sortAscending;
        }
        else
        {
            sortColumn = column;
            sortAscending = true;
        }
        ApplySorting();
    }

    private void ApplySorting()
    {
        if (games == null)
        {
            sortedGames = Enumerable.Empty<BoardGameOverviewItem>();
            return;
        }

        sortedGames = sortColumn switch
        {
            nameof(BoardGameOverviewItem.GameName) => sortAscending
                ? games.OrderBy(g => g.GameName)
                : games.OrderByDescending(g => g.GameName),
            nameof(BoardGameOverviewItem.Complexity) => sortAscending
                ? games.OrderBy(g => g.Complexity ?? decimal.MaxValue)
                : games.OrderByDescending(g => g.Complexity ?? decimal.MinValue),
            _ => games.OrderBy(g => g.GameName)
        };
    }

    private string RenderStarRating(decimal value, decimal maxValue = 5.0m)
    {
        var fullStars = (int)Math.Floor(value);
        var hasHalfStar = value % 1 >= 0.5m;
        var emptyStars = (int)maxValue - fullStars - (hasHalfStar ? 1 : 0);
        
        var html = "";
        for (int i = 0; i < fullStars; i++)
        {
            html += "<span class=\"text-warning\">★</span>";
        }
        if (hasHalfStar)
        {
            html += "<span class=\"text-warning\" style=\"opacity: 0.5;\">★</span>";
        }
        for (int i = 0; i < emptyStars; i++)
        {
            html += "<span class=\"text-muted\">☆</span>";
        }
        return html;
    }

    private async Task AskQuestion(BoardGameOverviewItem game, string question)
    {
        if (game == null || string.IsNullOrWhiteSpace(question))
        {
            Logger.LogWarning("AskQuestion called with null game or empty question");
            return;
        }

        if (UserContext == null || string.IsNullOrWhiteSpace(UserContext.UserId))
        {
            Logger.LogError("UserContext or UserId is null when asking question");
            return;
        }

        if (game.BoardGameId == Guid.Empty)
        {
            Logger.LogError("Game BoardGameId is empty when asking question for game {GameName}", game.GameName);
            return;
        }

        selectedGameForFaq = game;
        followUpQuestion = string.Empty;
        
        // Check if there's an existing conversation
        var existingConversationId = await BoardGameFaqService.GetConversationIdAsync(game.BoardGameId, UserContext.UserId);
        
        if (existingConversationId.HasValue)
        {
            // Load existing conversation and ask as follow-up
            currentConversationId = existingConversationId.Value;
            faqConversation = (await BoardGameFaqService.GetConversationHistoryAsync(currentConversationId.Value)).ToList();
            StateHasChanged();
            
            // Set the question and ask as follow-up
            followUpQuestion = question;
            await AskFollowUp();
            return;
        }
        
        // New conversation - ask the question
        faqConversation = null;
        currentConversationId = null;
        isLoadingFaqResponse = true;
        StateHasChanged();

        try
        {
            var response = await BoardGameFaqService.GetAnswerAsync(
                game.BoardGameId,
                game.GameName,
                question,
                UserContext?.UserId ?? string.Empty
            );

            currentConversationId = response.ConversationId;
            
            // Load conversation history
            if (currentConversationId != Guid.Empty)
            {
                faqConversation = (await BoardGameFaqService.GetConversationHistoryAsync(currentConversationId.Value)).ToList();
            }
            else
            {
                // Fallback if conversation wasn't created
                faqConversation = new List<BoardGameConversationMessage>
                {
                    new BoardGameConversationMessage
                    {
                        Role = "user",
                        Content = question
                    },
                    new BoardGameConversationMessage
                    {
                        Role = "assistant",
                        Content = response.Answer
                    }
                };
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error asking question for game {GameName}", game.GameName);
            faqConversation = new List<BoardGameConversationMessage>
            {
                new BoardGameConversationMessage
                {
                    Role = "user",
                    Content = question
                },
                new BoardGameConversationMessage
                {
                    Role = "assistant",
                    Content = "Sorry, an error occurred while generating the answer. Please try again later."
                }
            };
        }
        finally
        {
            isLoadingFaqResponse = false;
            StateHasChanged();
        }
    }

    private async Task AskFollowUp()
    {
        if (selectedGameForFaq == null)
            return;

        if (UserContext == null || string.IsNullOrWhiteSpace(UserContext.UserId))
        {
            Logger.LogError("UserContext or UserId is null when asking follow-up question");
            return;
        }

        // If no conversation exists yet, create one with the follow-up question
        if (!currentConversationId.HasValue)
        {
            var existingConversationId = await BoardGameFaqService.GetConversationIdAsync(
                selectedGameForFaq.BoardGameId, 
                UserContext.UserId
            );
            
            if (existingConversationId.HasValue)
            {
                currentConversationId = existingConversationId.Value;
                faqConversation = (await BoardGameFaqService.GetConversationHistoryAsync(currentConversationId.Value)).ToList();
            }
        }

        if (string.IsNullOrWhiteSpace(followUpQuestion) || !currentConversationId.HasValue)
            return;

        var question = followUpQuestion.Trim();
        followUpQuestion = string.Empty;
        isLoadingFaqResponse = true;
        StateHasChanged();

        try
        {
            var answer = await BoardGameFaqService.AskFollowUpAsync(
                selectedGameForFaq.BoardGameId,
                selectedGameForFaq.GameName,
                question,
                UserContext?.UserId ?? string.Empty,
                currentConversationId.Value
            );

            // Reload conversation history
            faqConversation = (await BoardGameFaqService.GetConversationHistoryAsync(currentConversationId.Value)).ToList();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error asking follow-up question");
            if (faqConversation != null)
            {
                faqConversation.Add(new BoardGameConversationMessage
                {
                    Role = "user",
                    Content = question
                });
                faqConversation.Add(new BoardGameConversationMessage
                {
                    Role = "assistant",
                    Content = "Sorry, an error occurred while generating the answer. Please try again later."
                });
            }
        }
        finally
        {
            isLoadingFaqResponse = false;
            StateHasChanged();
        }
    }

    private async Task OnFollowUpKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !string.IsNullOrWhiteSpace(followUpQuestion))
        {
            await AskFollowUp();
        }
    }

    private void CloseFaqModal()
    {
        selectedGameForFaq = null;
        faqConversation = null;
        currentConversationId = null;
        followUpQuestion = string.Empty;
        isLoadingFaqResponse = false;
    }
}

