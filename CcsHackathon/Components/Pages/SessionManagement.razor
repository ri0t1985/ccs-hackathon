@page "/sessions"
@using System.ComponentModel.DataAnnotations
@using CcsHackathon.Services
@using CcsHackathon.Data
@using Microsoft.EntityFrameworkCore
@attribute [Authorize]
@inject ISessionService SessionService
@inject ApplicationDbContext _dbContext
@inject ILogger<SessionManagement> Logger

<PageTitle>Session Management</PageTitle>

<div class="container mt-4">
    <h2>Board Game Session Planning</h2>
    <p class="text-muted">Create and manage board game sessions</p>
    
    <div class="row">
        <div class="col-md-6">
            <h3>Create New Session</h3>
            <EditForm Model="@sessionModel" OnValidSubmit="HandleCreateSession">
                <DataAnnotationsValidator />
                <ValidationSummary />
                
                <div class="mb-3">
                    <label for="sessionDate" class="form-label">Session Date</label>
                    <InputDate TValue="DateOnly" id="sessionDate" class="form-control" 
                               Value="sessionModel.Date" 
                               ValueChanged="@((DateOnly value) => sessionModel.Date = value)"
                               ValueExpression="@(() => sessionModel.Date)" />
                    <ValidationMessage For="@(() => sessionModel.Date)" />
                </div>
                
                <button type="submit" class="btn btn-primary" disabled="@isCreating">
                    @if (isCreating)
                    {
                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        <text>Creating...</text>
                    }
                    else
                    {
                        <text>Create Session</text>
                    }
                </button>
            </EditForm>
            
            @if (!string.IsNullOrEmpty(createMessage))
            {
                <div class="alert @(isCreateError ? "alert-danger" : "alert-success") mt-3" role="alert">
                    @createMessage
                </div>
            }
        </div>
        
        <div class="col-md-6">
            <h3>Existing Sessions</h3>
            @if (sessions == null)
            {
                <p>Loading sessions...</p>
            }
            else if (!sessions.Any())
            {
                <p class="text-muted">No sessions created yet.</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Session Date</th>
                                <th>Number of Attendees</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var session in sessions)
                            {
                                var attendeeCount = sessionAttendeeCounts.GetValueOrDefault(session.Id, 0);
                                <tr>
                                    <td class="align-middle">
                                        <strong>@session.Date.ToString("yyyy-MM-dd")</strong>
                                    </td>
                                    <td class="align-middle">
                                        <a href="/sessions/@session.Id/attendees" class="text-decoration-none">
                                            @attendeeCount
                                        </a>
                                    </td>
                                    <td class="text-end">
                                        <a href="/sessions/@session.Id/attendees" 
                                           class="btn btn-sm btn-outline-primary me-2" 
                                           title="View Attendees">
                                            üë• Attendees
                                        </a>
                                        <button class="btn btn-sm btn-outline-secondary me-2" 
                                                @onclick="() => EditSession(session)"
                                                title="Reschedule">
                                            ‚úèÔ∏è Edit
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger" 
                                                @onclick="() => CancelSession(session.Id)"
                                                title="Cancel">
                                            ‚ùå Cancel
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-12">
            <h3>Upcoming Sessions</h3>
            @if (upcomingSessionsWithCounts == null)
            {
                <p>Loading upcoming sessions...</p>
            }
            else if (!upcomingSessionsWithCounts.Any())
            {
                <p class="text-muted">No upcoming sessions.</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Session Date</th>
                                <th>Number of Attendees</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var sessionWithCount in upcomingSessionsWithCounts)
                            {
                                <tr>
                                    <td class="align-middle">
                                        <strong>@sessionWithCount.Session.Date.ToString("yyyy-MM-dd")</strong>
                                    </td>
                                    <td class="align-middle">
                                        <a href="/sessions/@sessionWithCount.Session.Id/attendees" class="text-decoration-none">
                                            @sessionWithCount.AttendeeCount
                                        </a>
                                    </td>
                                    <td class="text-end">
                                        <a href="/sessions/@sessionWithCount.Session.Id/attendees" 
                                           class="btn btn-sm btn-outline-primary" 
                                           title="View Attendees">
                                            üë• Attendees
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-12">
            <h3>Historic Sessions</h3>
            @if (historicSessionsWithCounts == null)
            {
                <p>Loading historic sessions...</p>
            }
            else if (!historicSessionsWithCounts.Any())
            {
                <p class="text-muted">No historic sessions.</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Session Date</th>
                                <th>Number of Attendees</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var sessionWithCount in historicSessionsWithCounts)
                            {
                                <tr>
                                    <td class="align-middle">
                                        <strong>@sessionWithCount.Session.Date.ToString("yyyy-MM-dd")</strong>
                                    </td>
                                    <td class="align-middle">
                                        <a href="/sessions/@sessionWithCount.Session.Id/attendees" class="text-decoration-none">
                                            @sessionWithCount.AttendeeCount
                                        </a>
                                    </td>
                                    <td class="text-end">
                                        <a href="/sessions/@sessionWithCount.Session.Id/attendees" 
                                           class="btn btn-sm btn-outline-primary" 
                                           title="View Attendees">
                                            üë• Attendees
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
    
    @if (editingSession != null && editSessionModel != null)
    {
        <div class="modal fade show d-block" style="background-color: rgba(0,0,0,0.5);" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="modal-title">Reschedule Session</h3>
                        <button type="button" class="btn-close" @onclick="CancelEdit" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Current Session Date:</label>
                            <p class="mb-0">@editingSession.Date.ToString("yyyy-MM-dd")</p>
                        </div>
                        
                        <EditForm Model="@editSessionModel" OnValidSubmit="HandleUpdateSession">
                            <DataAnnotationsValidator />
                            <ValidationSummary />
                            
                            <div class="mb-3">
                                <label for="editSessionDate" class="form-label">New Date</label>
                                <InputDate TValue="DateOnly" id="editSessionDate" class="form-control" 
                                           Value="editSessionModel.Date" 
                                           ValueChanged="@((DateOnly value) => editSessionModel!.Date = value)"
                                           ValueExpression="@(() => editSessionModel.Date)" />
                                <ValidationMessage For="@(() => editSessionModel.Date)" />
                            </div>
                            
                            <div class="d-flex justify-content-end">
                                <button type="button" class="btn btn-secondary me-2" @onclick="CancelEdit">Cancel</button>
                                <button type="submit" class="btn btn-primary" disabled="@isUpdating">
                                    @if (isUpdating)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2"></span>
                                    }
                                    Update Session
                                </button>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private SessionModel sessionModel = new();
    private SessionModel? editSessionModel;
    private Session? editingSession;
    private List<Session>? sessions;
    private List<SessionWithAttendeeCount>? upcomingSessionsWithCounts;
    private List<SessionWithAttendeeCount>? historicSessionsWithCounts;
    private Dictionary<Guid, int> sessionAttendeeCounts = new();
    private string createMessage = string.Empty;
    private bool isCreateError = false;
    private bool isCreating = false;
    private bool isUpdating = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadSessionsAsync();
        await LoadSessionsWithCountsAsync();
    }

    private async Task LoadSessionsAsync()
    {
        try
        {
            sessions = (await SessionService.GetAllSessionsAsync()).ToList();
            
            // Load attendee counts for existing sessions
            if (sessions != null && sessions.Any())
            {
                var sessionIds = sessions.Select(s => s.Id).ToList();
                
                // Get counts from upcoming and historic sessions
                var counts = await SessionService.GetUpcomingSessionsWithAttendeeCountAsync();
                var historicCounts = await SessionService.GetHistoricSessionsWithAttendeeCountAsync();
                
                // Build dictionary from both sources
                var allCounts = counts.Concat(historicCounts).ToList();
                sessionAttendeeCounts = allCounts.ToDictionary(sc => sc.Session.Id, sc => sc.AttendeeCount);
                
                // For any sessions not in the counts, calculate them
                var missingSessionIds = sessionIds.Where(id => !sessionAttendeeCounts.ContainsKey(id)).ToList();
                if (missingSessionIds.Any())
                {
                    var missingCounts = await _dbContext.Registrations
                        .Where(r => r.SessionId.HasValue && missingSessionIds.Contains(r.SessionId.Value))
                        .GroupBy(r => r.SessionId!.Value)
                        .Select(g => new { SessionId = g.Key, Count = g.Select(r => r.UserId).Distinct().Count() })
                        .ToDictionaryAsync(x => x.SessionId, x => x.Count);
                    
                    foreach (var kvp in missingCounts)
                    {
                        sessionAttendeeCounts[kvp.Key] = kvp.Value;
                    }
                }
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading sessions");
            sessions = new List<Session>();
        }
    }

    private async Task LoadSessionsWithCountsAsync()
    {
        try
        {
            upcomingSessionsWithCounts = (await SessionService.GetUpcomingSessionsWithAttendeeCountAsync()).ToList();
            historicSessionsWithCounts = (await SessionService.GetHistoricSessionsWithAttendeeCountAsync()).ToList();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading sessions with attendee counts");
            upcomingSessionsWithCounts = new List<SessionWithAttendeeCount>();
            historicSessionsWithCounts = new List<SessionWithAttendeeCount>();
        }
    }

    private async Task HandleCreateSession()
    {
        isCreating = true;
        createMessage = string.Empty;
        isCreateError = false;

        try
        {
            await SessionService.CreateSessionAsync(sessionModel.Date);
            
            createMessage = "Session created successfully!";
            sessionModel = new SessionModel();
            await LoadSessionsAsync();
            await LoadSessionsWithCountsAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error creating session");
            createMessage = $"Error creating session: {ex.Message}";
            isCreateError = true;
        }
        finally
        {
            isCreating = false;
        }
    }

    private void EditSession(Session session)
    {
        editingSession = session;
        editSessionModel = new SessionModel
        {
            Date = session.Date
        };
    }

    private void CancelEdit()
    {
        editingSession = null;
        editSessionModel = null;
    }

    private async Task HandleUpdateSession()
    {
        if (editingSession == null || editSessionModel == null) return;

        isUpdating = true;
        try
        {
            await SessionService.UpdateSessionDateAsync(editingSession.Id, editSessionModel.Date);
            
            editingSession = null;
            editSessionModel = null;
            await LoadSessionsAsync();
            await LoadSessionsWithCountsAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error updating session");
        }
        finally
        {
            isUpdating = false;
        }
    }

    private async Task CancelSession(Guid sessionId)
    {
        try
        {
            await SessionService.CancelSessionAsync(sessionId);
            await LoadSessionsAsync();
            await LoadSessionsWithCountsAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error cancelling session");
        }
    }

    public class SessionModel
    {
        [Required(ErrorMessage = "Date is required")]
        public DateOnly Date { get; set; } = DateOnly.FromDateTime(DateTime.Today);
    }
}

